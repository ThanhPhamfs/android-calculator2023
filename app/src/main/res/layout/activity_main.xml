<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/resultBG"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="0"
            android:textColor="#000000"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#fca311"
        android:orientation="vertical">

        <LinearLayout style="@style/calculatorProcessingButtonRow">

            <Button
                style="@style/processingButtonStyles"
                android:text="7" />

            <Button
                style="@style/processingButtonStyles"
                android:text="8" />

            <Button
                style="@style/processingButtonStyles"
                android:text="9" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/division" />

        </LinearLayout>

        <LinearLayout style="@style/calculatorProcessingButtonRow">

            <Button
                style="@style/processingButtonStyles"
                android:text="4" />

            <Button
                style="@style/processingButtonStyles"
                android:text="5" />

            <Button
                style="@style/processingButtonStyles"
                android:text="6" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/multiplication" />

        </LinearLayout>

        <LinearLayout style="@style/calculatorProcessingButtonRow">

            <Button
                style="@style/processingButtonStyles"
                android:text="1" />

            <Button
                style="@style/processingButtonStyles"
                android:text="2" />

            <Button
                style="@style/processingButtonStyles"
                android:text="3" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/subtraction" />

        </LinearLayout>

        <LinearLayout style="@style/calculatorProcessingButtonRow">

            <Button
                style="@style/processingButtonStyles"
                android:text="0" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/dot" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/clear" />

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/summation" />

        </LinearLayout>

        <LinearLayout style="@style/calculatorProcessingButtonRow">

            <Button
                style="@style/processingButtonStyles"
                android:text="@string/equation" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>